const NEWWINMSG = '◊†◊§◊™◊ó ◊ë◊ó◊ú◊ï◊ü ◊ó◊ì◊©';
const EXTSITEMSG = '◊û◊¢◊ë◊® ◊ú◊ê◊™◊® ◊ó◊ô◊¶◊ï◊†◊ô';
const PDFTEXT = '◊û◊°◊û◊ö PDF ◊ú◊¶◊§◊ô◊ô◊î ◊ê◊ï ◊î◊ï◊®◊ì◊î';
const PDFDWNLDTEXT = '◊û◊°◊û◊ö PDF ◊ú◊î◊ï◊®◊ì◊î';
const WORDTEXT = '◊û◊°◊û◊ö Word ◊ú◊î◊ï◊®◊ì◊î';
const XLSTEXT = '◊û◊°◊û◊ö Excel ◊ú◊î◊ï◊®◊ì◊î';
const CURRENTTABMSG = '◊†◊§◊™◊ó ◊ë◊ó◊ú◊ï◊ü ◊†◊ï◊õ◊ó◊ô';


